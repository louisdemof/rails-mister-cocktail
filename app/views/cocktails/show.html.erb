<h2 class="menu-top"><%= @cocktail.name %></h2>
<div class="container">
<% @cocktail.doses.each do |dose| %>
<p>
  <%= dose.ingredient.name %> | <%= dose.description %>
  <%= button_to "Delete this dose", dose_path(dose),
    :class => "btn-small", :method => :delete %>
</p>
<hr>
<% end %>

<%= button_to "Add a new ingredient", new_cocktail_dose_path(@cocktail),
    :class => "btn-flat", :method => :get %>
</div>

<%= link_to 'Leave a review', new_cocktail_review_path(@cocktail) %>
 <p><% @cocktail.reviews.each do |r| %>
<h2><%="Reviews"%></h2>
  <%= "⭐" * r.rating   %><%= " | " %><%= r.content %>
   <% end %>
</p>

